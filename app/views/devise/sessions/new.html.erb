<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="login-box col-sm-6  mx-auto text-center">
  <div class="login-logo">
    <h3><b>Admin</b>Login</h3>
  </div>
 <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Sign in to start your session</p>

      <form action="../../index3.html" method="post">
        <div class="input-group mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:'Email' %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fa fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control', placeholder: "Password" %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fa fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary float-left">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <%= f.submit "Log in" ,class: "btn btn-primary btn-block"%>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <p class="mb-1">
        <%= render "devise/shared/links" %>
      </p>
      
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
</body>
<% end %>



