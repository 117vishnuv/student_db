<!DOCTYPE html>
<html>
  <head>
    <title>StudentsDb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body >
    <nav class="navbar sticky-top navbar-expand-sm navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Students DB</a>
        <ul class="navbar-nav ml-auto"> 
         <% if user_signed_in? %>
            <li class="nav-item">
              <strong><%= link_to 'New Student', new_student_path ,class: 'nav-link text-white'%></strong>
            </li>
            <li class="nav-item">
              <strong><%= link_to 'admin-panel' ,admin_path,  class: ' nav-link text-white'%></strong>
            </li>
            <li class="nav-item"> 
                <strong><%= link_to "Logout", destroy_user_session_path, method: :delete, class: ' nav-link text-white'%></strong>
            </li> 
            </ul> 
          <% else %>   
            <%# <li class="nav-item"> 
                <strong><%= link_to "Sign up", new_user_registration_path ,class: 'nav-link text-white ', :style =>'font-size=36px;' %><%# </strong><br />
            </li>  %>
            <li class="nav-item">
              <strong><%= link_to 'New Student', new_student_path ,class: 'nav-link text-white'%></strong>
            </li> 
            <li class="nav-item"> 
              <strong><%= link_to "Admin-log in", new_user_session_path, class: 'nav-link text-white ml-auto'%></strong><br /> 
            </li> 
        
        </ul> 
         <% end %>   
    </nav>  



    <div class="container">
      <% unless flash.empty? %>
        <script type="text/javascript">
           <% flash.each do |f| %>
           <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
            toastr['<%= type %>']('<%= f[1] %>');
           <% end %>
        </script>
      <% end %>
    </div>
    <%= yield %>
    
    
  </body>
</html>
