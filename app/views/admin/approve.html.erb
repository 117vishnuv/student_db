<h1 class='text-center'>Approve new entries</h1>

<p id="notice"><%= notice %></p>


<% if !user_signed_in? %>
  <div class='container'>
    <div class='float-left'>
      <h1>Students</h1>
        <% if user_signed_in? %>
           <%= render "search_form" %>
        <% end %>
      </div>
    <div class='float-right'>
       <h1>Register new student</h1>
       <%= link_to 'New Student', new_student_path ,class: 'btn btn-primary text-white float-right'%>
    </div>
  </div>
 <% else %>
 <div class='container'>
  <div class='float-left'>
    <h1>Students</h1>
  </div>
  <div class='float-right'>
     <% if user_signed_in? %>
        <%= render "students/search_form" , class: 'float-right'%>
     <% end %>
  </div>
</div>
<% end %> 

<table class='table'>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Institution</th>
      <th>Country</th>
      <th>Approve</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    
  
    <% @students.each do |student| %>
    <% if !student.approved? %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.address %></td>
        <td><%= student.mobile %></td>
        <td><%= student.institution.name %></td>
        <td><%= student.country.try(:country_name)%></td>
        <td>
        <%= form_for(student) do |f| %>
           <div class="field">
             <%= f.label "Approve!" %> <br />
             <%= f.check_box :approved %> <br />
             <%= f.submit "Submit", class: "button small radius" %>
           </div>
        <% end %>
        </td>

        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
    <% end %>
  </tbody>
</table>

<br>


