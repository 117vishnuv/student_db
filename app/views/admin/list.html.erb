<h1 class='text-center'>Approve new entries</h1>

<p id="notice"><%= notice %></p>




<table class='table'>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Institution</th>
      <th>Country</th>
      <th>Approve</th>
      <th>Reject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    
  
    <% @students.each do |student| %>
    <% if student.approved.nil? %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.address %></td>
        <td><%= student.mobile %></td>
        <td><%= student.institution.name %></td>
        <td><%= student.country.try(:country_name)%></td>
        <td>
        <%= form_for student,url: approve_path(student) do |f| %>
           <div class="field">
             <%# <%= f.label "Approve!" <br /> %>
             <%= f.check_box :approved  %> 
             <%= f.submit "Approve", class: "button  small radius" %>
           </div>
        <% end %>
        </td>
        <td>
        <%= form_for student,url: reject_path(student) do |f| %>
           <div class="field">
             <%# <%= f.label "Reject!" <br />  %>
             <%= f.check_box :approved ,{},'false' %> 
             <%= f.submit "Reject", class: "button small radius" %>
           </div>
        <% end %>
        </td>
        <%# <%= check_box 'object', 'boolean_attribute', {}, 'true', 'false' %> 
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        
      </tr>
    <% end %>  
    <% end %>
  </tbody>
</table>

<br>


